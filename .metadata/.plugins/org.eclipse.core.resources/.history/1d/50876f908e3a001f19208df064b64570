import java.util.Scanner;


public class OpDemo {

	public static void main(String[] args) {
		//short su = ~5;
		//short result = ~su;			// ~연산자는 결과를 int로 바꾼다.
		
		//short result = true ?  1970 :  2024;
		//short result = true ? 1970 : 3.14;			//삼항연산자는 참과 거짓을 먼저 확인하고 조건을 확인한다.
		
		//초단위로 받아 시간 초로 표기
		Scanner sc = new Scanner(System.in);
		System.out.print("값 입력(초단위) : ");
		int value = sc.nextInt();
		
		int hour = (value / 60) / 60;
		int second = value % 60;
		
		System.out.printf("%d초는 %d시간 %d초입니다", value, hour, second);
		

	}

}
